FROM node:24-alpine3.22

ARG VITE_API_BASE_URL
ENV VITE_API_BASE_URL=${VITE_API_BASE_URL}

WORKDIR /app

# 複製 package 檔案
COPY package*.json ./

# 安裝依賴
RUN npm ci

# 複製所有檔案（在開發模式下，程式碼會透過 volume 掛載，但這裡先複製以確保依賴正確）
COPY . .

# 暴露 Vite 開發伺服器端口（預設 5173）
EXPOSE 5173

# 啟動開發伺服器
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
